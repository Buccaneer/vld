@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/vld-targets.cmake")

# Detect architecture
if(CMAKE_SIZEOF_VOID_P EQUAL 8)
    set(VLD_ARCH "Win64")
else()
    set(VLD_ARCH "Win32")
endif()

# Set paths based on architecture
set(VLD_RUNTIME_DIR "${CMAKE_CURRENT_LIST_DIR}/../../bin/${VLD_ARCH}")
set(VLD_LIBRARY_DIR "${CMAKE_CURRENT_LIST_DIR}/../../lib/${VLD_ARCH}")

# Add runtime and library paths to the consumer
set(VLD_DLL "${VLD_RUNTIME_DIR}/vld.dll")
set(VLD_DBGHELP_DLL "${VLD_RUNTIME_DIR}/dbghelp.dll")
